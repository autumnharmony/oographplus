                <!--
                    the following values can be configured:
                    ooo:    OpenOffice dir
                    sdk:    OpenOffice SDK dir
                    idlDir: IDL source dir
                    oxtDir: OXT source dir
                 -->
                <configuration>
                    <ooo>/opt/openoffice4/</ooo>
                    <sdk>/opt/openoffice4/sdk</sdk>
                    <oxtDir>src/main/resources/oxt</oxtDir>
